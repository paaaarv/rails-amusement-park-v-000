<h2> Sign up To Ride! </h2>

<%= form_for @user, controller: 'users', action: 'create' do |f|%>
  <%=f.label :name %>
  <%=f.text_field :name%><br>
  <%=f.label :password%>
  <%= f.text_field :password%><br>
  <%=f.label :happiness%>
  <%=f.text_field :happiness%><br>
  <%=f.label :nausea %>
  <%=f.text_field :nausea%><br>
  <%=f.label :height%>
  <%=f.text_field :height%><br>
  <%=f.label :tickets%>
  <%=f.text_field :tickets%><br>
  <%= f.label "Admin?"%>
  <%= f.check_box :admin%> 
  <%=f.submit%>
  <%end%>
